                                data-id="{{ carte }}"
                                data-couleur="{{ tCartes[carte].couleur }}"
                                data-poid="{{ tCartes[carte].forceCarte }}"
                                data-position="{{ loop.index }}"
                                data-nb-cartes="{{ partie.terrainJ1[i]|length }}"
