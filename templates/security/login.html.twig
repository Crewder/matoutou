{% block body %}
    <img class="navbarlogo" src="{{asset('assets/images/navbarlogo2.png')}}">
    <div id="reseaux">
        <a href="" id="facebook">
            <p class="rotate bleu">FACEBOOK</p>
            <img class="pictosocial" src="{{asset('assets/images/facebookinverse.png')}}">
        </a>
        <a href="http://149.91.89.19/promo/" id="twitter">
            <p class="rotate bleu">PROMO</p>
            <img class="pictosocial" src="{{asset('assets/images/promoinverse.png')}}">
        </a>
        <a href="" id="youtube">
            <p class="rotate bleu">YOUTUBE</p>
            <img class="pictosocial" src="{{asset('assets/images/youtubeinverse.png')}}">
        </a>
        <div>
            <a id="agence" href="{{path('app_matoutou_index')}}"><img src="{{asset('assets/images/logoagence.png')}}"></a>
        </div>
    </div>
<div id="global">
    <div id="navigationun">
        <div id="navgauche">
            <a href="{{path("app_matoutou_index")}}" id="navpart1">
                <h1 id="navchiffre1" class="gris navchiffre">01</h1>
                <div id="navtrait1" ></div>
                <div class="conteneurnavtexte">
                    <p id="navtexte1" class="bleu">Présentation</p>
                </div>
            </a>
            <a href="{{path("app_matoutou_inscription")}}" id="navpart3">
                <h1 id="navchiffre3" class="gris navchiffre">02</h1>
                <div id="navtrait3" ></div>
                <div class="conteneurnavtexte">
                    <p id="navtexte3"  class="bleu">Inscription</p>
                </div>
            </a>
            <a href="{{path("app_login")}}" id="navpart6">
                <h1 id="navchiffre6" class="bleu navchiffre">03</h1>
                <div id="navtrait6" style="background-color: #253a85;"></div>
                <div class="conteneurnavtexte">
                    <p id="navtexte6" style="color: #253a85;"class="bleu">Connexion</p>
                </div>
            </a>
        </div>
    </div>
    <div>
        <h1 style="position:absolute;left:200px;" class="bleu petith1">Connexion</h1>
    </div>
        <div class="contenumatoutou">
            
            <form method="post" id="formulaireconnexion">
            <h2 class="bleu">Se connecter :</h2>
                {% if error %}
                    <div class="alert alert-danger">{{ error.messageKey|trans(error.messageData, 'security') }}</div>
                {% endif %}

                <input type="email" value="{{ last_username }}" name="email" id="inputEmail" class="inputconnexion" placeholder="Email" required autofocus>
                <input type="password" name="password" id="inputPassword" class="inputconnexion" placeholder="Mot de passe" required>

                <input type="hidden" name="_csrf_token"
                       value="{{ csrf_token('authenticate') }}"
                >
                <div id="blocMdpOubli">
                    <a  href="{{ path('app_forgotten_password') }}">Mot de passe oublié ?</a>
                </div>
                <button class="submitconnexion bleu" type="submit">
                    Connexion
                </button>
                
            </form>
        </div>
    <div class="contenubouton2">
            <a id="a4" href="{{path('app_matoutou_inscription')}}"></a>
